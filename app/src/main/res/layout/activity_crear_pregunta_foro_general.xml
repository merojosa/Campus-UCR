<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_crear_pregunta"
    tools:context=".foro_general.CrearPreguntaForoGeneral"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/crearPreguntaTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pantalla de Crear Pregunta Temporal"
            android:textSize="23dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="parent" />

        <!-- Código para incluir la barra de navegación general-->
        <!-- Código para incluir la barra de navegación general-->
        <include
            android:id="@+id/bottom_navigation"
            layout="@layout/barra_navegacion_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent" />

    </RelativeLayout>

    <!-- Código para incluir el menu de navegación izquierda a derecha-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu_nav"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_hl"
        android:id="@+id/nv">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>